<h2>Results</h2>
<h3>Gross</h3>
  <% @gross_scores.each do |score_hash| %>
    <h3><%= score_hash[:name] %> : <%= score_hash[:gross] %>
  <% end %>
  <h3>Net</h3>
    <% @net_scores.each do |score_hash| %>
  <h3><%= score_hash[:name] %> : <%= score_hash[:net] %>
  <% end %>


<h3>Payballs</h3>
  <% @payballs.each do |payball| %>
    <h3><%= payball[:name] %> : <%= payball[:score] %> on <%= payball[:hole] %></h3>
  <% end %>

